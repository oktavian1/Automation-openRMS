# OpenMRS Base Configuration
BASE_URL=https://o2.openmrs.org

# Admin User Credentials (for demo environment)
ADMIN_USER=admin
ADMIN_PASS=Admin123
DEFAULT_LOCATION=Inpatient Ward

# Test Configuration
# Set to 'true' when running in CI environment
CI=false

# Browser Configuration
# Supported: chromium, firefox, webkit
DEFAULT_BROWSER=chromium

# Test Data Configuration
# Set to 'true' to use API for test data creation/cleanup
USE_API_DATA_SEEDING=false

# Reporting Configuration
# Test reports output directory
REPORTS_DIR=automation/reports

# Debugging Configuration
# Set to 'true' to run tests in headed mode locally
RUN_HEADED=false

# Set to 'true' to enable debug mode
DEBUG_MODE=false

# Timeout Configuration (in milliseconds)
TEST_TIMEOUT=60000
ACTION_TIMEOUT=15000
NAVIGATION_TIMEOUT=30000

# Retry Configuration
MAX_RETRIES=1
MAX_WORKERS=1

# Screenshot Configuration
# Options: 'always', 'only-on-failure', 'off'
SCREENSHOT_MODE=only-on-failure

# Video Configuration  
# Options: 'always', 'retain-on-failure', 'off'
VIDEO_MODE=retain-on-failure

# Trace Configuration
# Options: 'always', 'on-first-retry', 'off'
TRACE_MODE=on-first-retry

# API Configuration (for advanced test data management)
API_BASE_URL=https://o2.openmrs.org/openmrs/ws/rest/v1
API_USERNAME=admin
API_PASSWORD=Admin123

# Slack/Teams Notification (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...

# Email Notification (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# NOTIFICATION_EMAIL=team@company.com